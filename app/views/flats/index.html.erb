<%= render "navbar" %>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= @flats.count %> Flats.</p>
    </div>
  </div>
  <div class='container d-inline-flex flex-wrap'>
    <div class="row justify-content-center">
      <% @flats.each do |flat| %>
        <div class='card m-3' style="width: 18rem">
          <div class="col-12">
            <div class="flat-card ">
              <%= image_tag flat.img_url, class: "card-img-top", style: "height: 200px; object-fit: cover; margin-top: 20px; margin-bottom: 10px;" %>
              <div class="flat-card-content">
                <div class="flat-card-title text-truncate">
                  <h4><%= flat.name %></h4>
                </div>
                <p class="card-text text-truncate"> <%= flat.address %></p>
                <div class="flex">
                  <div class="flex">
                    <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
                    <i class="fas fa-hand-holding-usd"></i><%= flat.price_per_night %>
                  </div>
                </div>
              </div>
              <div class="flat-card-actions my-2 border-top text-center pt-2">
                <%= link_to "More info", flat_path(flat) %>
                <a class="ml-3 text-warning" href="/flats/4372/edit">Edit</a>
                <a data-confirm="Are you sure?" class="ml-3 text-danger" rel="nofollow" data-method="delete" href="/flats/4372">Remove</a>
              </div>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>



                      




